{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "#gears": [
        "src/index.cjs",
        "src/index.mjs"
      ],
      "#gears/gears": [
        "src/gears/index.cjs"
      ],
      "#gears/gears/*": [
        "src/gears/*/index.cjs"
      ],
      "#gears/gears/forward": [
        "src/gears/forward/index.cjs"
      ],
      "#gears/gears/reverse": [
        "src/gears/reverse/index.cjs"
      ],
      "#gears/render": [
        "src/render/index.cjs",
        "src/render/index.mjs"
      ],
      "#gears/render/forward": [
        "src/render/forward/index.cjs"
      ],
      "#gears/render/reverse": [
        "src/render/reverse/index.cjs"
      ]
    }
  },
  "include": [
    "."
  ],
  "exclude": [
    "**/__tests__/**/*"
  ]
}
