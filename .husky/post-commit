#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

get_changes () {
  git diff HEAD~1..HEAD~0 -- origin/main build src stories "*.mjs" "*.cjs" "*.mts" "*.cts" "*.jsx"
}

has_changes () {
  [ ! -z "$(get_changes)" ]
}

get_package_changes () {
  git diff HEAD~1..HEAD~0 -- origin/main package.json
}

has_package_changes () {
  [ ! -z "$(get_package_changes)" ]
}

if has_changes || has_package_changes;
then
  npx cross-env DEBUG=@modernpoacher/hooks* node .husky/post-commit.mjs
fi
